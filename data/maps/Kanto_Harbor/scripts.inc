Kanto_Harbor_EventScript_BoardFerry::
	msgbox Kanto_Harbor_Text_PleaseBoardFerry, MSGBOX_DEFAULT
	closemessage
	applymovement VAR_LAST_TALKED, Common_Movement_WalkInPlaceFasterUp
	waitmovement 0
	delay 30
	hideobjectat VAR_LAST_TALKED, MAP_KANTO_HARBOR
	call_if_eq VAR_FACING, DIR_NORTH, Kanto_Harbor_EventScript_BoardFerryNorth
	call_if_eq VAR_FACING, DIR_EAST, Kanto_Harbor_EventScript_BoardFerryEast
	delay 30
	hideobjectat OBJ_EVENT_ID_PLAYER, 0
	setvar VAR_0x8004, LOCALID_SS_TIDAL
	call Common_EventScript_FerryDepart
	return

